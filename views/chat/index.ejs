<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title> <%= title %> </title>
        <link rel="stylesheet" type="text/css" href="/css/chat/index.css" />
        <script src="/lib/angular/angular.min.js"></script>
        <script src="/lib/angular-cookies/angular-cookies.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/chat/chatApp.js" ></script>
        <script src="/js/chat/controllers/ChatCtrl.js" ></script>
        <script src="/js/chat/services/socketio.js" ></script>
        <script src="/js/chat/services/getUserService.js"></script>
    </head>
    <body ng-app="chat" ng-controller="ChatCtrl">
        <h2> Welcome to chat </h2>
        <h3> {{ user }} </h3>
        <div id="messages">
            <ul>
                <li ng-repeat="message in messages track by $index" >
                    {{ message }}
                </li>
            </ul>
        </div>
        <div id="messageInput">
            <form ng-submit="sendMessage()">
                <input type="text" ng-model="msgInput" placeholder="...">
                <input type="submit" value="Send">
            </form>
        </div>
    </body>
</html>
